{
  "name": "@spknetwork/spk-js",
  "version": "0.1.0",
  "description": "JavaScript library for interacting with SPK Network decentralized storage",
  "main": "dist/spk-js.cjs.js",
  "module": "dist/spk-js.esm.js",
  "browser": "dist/spk-js.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "playwright test",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "npm run build:watch & npm run test:watch",
    "lint": "eslint src tests --ext .js,.ts",
    "lint:fix": "eslint src tests --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\"",
    "docs": "typedoc --out docs/api src/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spknetwork/spk-js.git"
  },
  "keywords": [
    "spk",
    "spknetwork",
    "ipfs",
    "decentralized",
    "storage",
    "hive",
    "blockchain",
    "web3"
  ],
  "author": "SPK Network",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spknetwork/spk-js/issues"
  },
  "homepage": "https://github.com/spknetwork/spk-js#readme",
  "dependencies": {
    "@hiveio/hive-js": "^2.0.0",
    "axios": "^1.10.0",
    "buffer": "^6.0.3",
    "ipfs-only-hash": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "rollup": "^4.9.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
